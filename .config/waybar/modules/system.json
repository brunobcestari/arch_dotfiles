{
  "cpu": {
    "format": " {usage}%",
    "tooltip": true,
    "interval": 2,
    "on-click": "alacritty -e htop"
  },

  "memory": {
    "format": " {percentage}%",
    "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G",
    "on-click": "alacritty -e htop"
  },

  "disk": {
    "format": " {percentage_used}%",
    "path": "/",
    "tooltip-format": "Used: {used} / {total}",
    "on-click": "thunar /"
  }
}
