{
  "cpu": {
    "format": "󰻠 {usage}%",
    "tooltip": true,
    "interval": 2,
    "on-click": "alacritty -e btop -p 1"
  },

  "memory": {
    "format": "󰍛 {percentage}%",
    "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G",
    "on-click": "alacritty -e btop -p 2"
  },

  "disk": {
    "format": "󰋊 {percentage_used}%",
    "path": "/",
    "tooltip-format": "Used: {used} / {total}",
    "on-click": "baobab /"
  }
}
