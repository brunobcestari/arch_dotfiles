{
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 4,

    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock", "custom/weather"],
    "modules-right": ["tray", "custom/mail", "custom/updates", "custom/vpn", "custom/media", "cpu", "memory", "disk", "pulseaudio", "pulseaudio/slider", "network"],

    "hyprland/workspaces": {
        "format": "{id}",
        "on-click": "activate",
        "all-outputs": false,
        "active-only": false
    },

    "hyprland/window": {
        "format": "{}",
        "max-length": 50,
        "separate-outputs": true
    },

    "clock": {
        "format": "{:%H:%M - %A, %B %d}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "on-click": "gnome-calendar || xdg-open https://calendar.google.com",
        "calendar": {
            "mode": "month",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    },

    "cpu": {
        "format": " {usage}%",
        "tooltip": true,
        "interval": 2,
        "on-click": "alacritty -e htop"
    },

    "memory": {
        "format": " {percentage}%",
        "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G",
        "on-click": "alacritty -e htop"
    },

    "disk": {
        "format": " {percentage_used}%",
        "path": "/",
        "tooltip-format": "Used: {used} / {total}",
        "on-click": "thunar /"
    },

    "network": {
        "format-wifi": "\udb85\udebd{essid}",
        "format-ethernet": "\udb80\ude00{ipaddr}",
        "format-disconnected": "⚠ Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "nm-connection-editor"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": " muted",
        "format-icons": {
            "headphone": "\uf025",
            "hands-free": "\uf10b",
            "headset": "\uee59",
            "car": "\uf1b9",
            "default": ["\uf026", "\uf027", "\uf028"]
        },
        "scroll-step": 5,
        "on-click": "pwvucontrol",
        "on-click-middle": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "tooltip-format": "{desc}\nVolume: {volume}%"
    },

    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },

    "tray": {
        "spacing": 10
    },

    "custom/weather": {
        "format": "{}",
        "return-type": "json",
        "exec": "wttrbar --location 'Sao Paulo' --fahrenheit false",
        "interval": 1800,
        "on-click": "xdg-open https://wttr.in/SaoPaulo",
        "tooltip": true
    },

    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "format-icons": {
            "Playing": "",
            "Paused": "",
            "Stopped": ""
        },
        "max-length": 40,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{title}}\", \"tooltip\": \"{{playerName}}: {{artist}} - {{title}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F 2>/dev/null",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-scroll-up": "playerctl previous",
        "interval": 1
    },

    "custom/vpn": {
        "format": "{}",
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/vpn-status.sh",
        "interval": 5,
        "on-click": "protonvpn-app",
        "tooltip": true
    },

    "custom/updates": {
        "format": "{}",
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/updates.sh",
        "interval": 3600,
        "on-click": "alacritty -e sh -c 'paru -Syu; read -p \"Press enter to close...\"'",
        "tooltip": true
    },

    "custom/mail": {
        "format": "{}",
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/thunderbird-mail.sh",
        "interval": 60,
        "on-click": "thunderbird",
        "tooltip": true
    }
}
