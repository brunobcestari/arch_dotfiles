# Mako notification daemon configuration

# Appearance
font=monospace 12
background-color=#1a1b26dd
text-color=#ffffff
border-color=#33ccff
border-size=2
border-radius=10
padding=15
margin=10
outer-margin=10

# Format - show app name in notifications
format=<b>%a</b>\n%s\n%b

# Positioning
anchor=top-right
layer=overlay
max-visible=5

# Behavior
default-timeout=5000
group-by=app-name

# Icons
icons=1
max-icon-size=64
icon-path=/home/bruno/.icons/Papirus-Dark-Grey:/usr/share/icons/hicolor:/usr/share/icons/Adwaita

# Actions
on-button-left=invoke-default-action
on-button-middle=dismiss-group
on-button-right=dismiss
on-touch=dismiss

# Urgency overrides
[urgency=low]
border-color=#888888
default-timeout=3000

[urgency=normal]
border-color=#33ccff

[urgency=critical]
border-color=#ff4444
default-timeout=0

# Do Not Disturb mode
[mode=do-not-disturb]
invisible=1
