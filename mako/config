# Mako notification daemon configuration

# Appearance
font=monospace 12
background-color=#1a1b26dd
text-color=#ffffff
border-color=#33ccff
border-size=2
border-radius=10
padding=15
margin=10

# Format - show app name in notifications
format=<b>%a</b>\n%s\n%b

# Positioning
anchor=top-right
default-timeout=5000
ignore-timeout=0

# Icons
icons=1
max-icon-size=64

# Grouping
group-by=app-name

# Urgency colors
[urgency=low]
border-color=#888888

[urgency=normal]
border-color=#33ccff

[urgency=critical]
border-color=#ff4444
default-timeout=0
